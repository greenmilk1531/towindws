    "electron": "^39.2.7",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.greenmilk.arma",
    "productName": "Arma Monitor",
    "files": [
      "**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "arma.ico"
